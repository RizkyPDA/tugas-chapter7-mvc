<!DOCTYPE html>
<html lang="en">
	<head>
		<%- include('partials/head') %>
	</head>
	<body>
		<!-- Start Header -->
		<header class="header">
			<!-- Start Navbar -->
			<%- include("partials/navbar") %>
			<!-- End Navbar -->
		</header>

		<!-- Start Detail Portfolio -->
		<section class="createPortfolio">
			<div class="container">
				<div class="row">
					<div class="col-12 createPortfolio__title">
						<h2>ADD NEW PORTFOLIO</h2>
						<p class="text-muted fst-italic my-4">Lorem ipsum dolor sit amet consectetur.</p>
					</div>
				</div>

				<div class="mt-3 createPortfolio__form">
					<form action="/create" method="post">
						<div class="row mb-2">
							<div class="col">
								<label for="project_name">Project Name</label>
								<input type="text" class="form-control" placeholder="Project Name" name="project_name" required />
							</div>
							<div class="col">
								<label for="client">Client Name</label>
								<input type="text" class="form-control" placeholder="client" name="client" required />
							</div>
						</div>
						<div class="row mb-2">
							<div class="col-6">
								<label for="category">Category Name</label>
								<input type="text" class="form-control" placeholder="Category" name="category" required />
							</div>
						</div>
						<div class="row mb-2">
							<div class="col-6 col-md-4">
								<label for="category">Project Release</label>
								<input type="date" class="form-control" placeholder="Project initial release date" name="release_date" required />
							</div>
						</div>
						<div class="createPortfolio__btn-group">
							<button type="submit" class="btn btn-lg btn-submit">Submit</button>
							<a href="/" class="btn btn-lg btn-back">Back</a>
						</div>
					</form>
				</div>
			</div>
		</section>
		<!-- End Detail Portfolio -->

		<!-- Bootstrap Bundle with Popper -->
		<script
			src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
			integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
			crossorigin="anonymous"
		></script>
	</body>
</html>
