<!DOCTYPE html>
<html lang="en">
	<head>
		<%- include('partials/head') %>
	</head>
	<body>
		<!-- Start Header -->
		<header class="header">
			<!-- Start Navbar -->
			<%- include("partials/navbar") %>
			<!-- End Navbar -->

			<!-- Start Header Title -->
			<div class="header__title">
				<div class="header__title-text">
					<h1 class="fst-italic">Welcome To Our Studio!</h1>
					<h1>IT'S NICE TO MEET YOU</h1>
				</div>
				<div class="header__title-btn mt-4">
					<a href="#" class="btn">TELL ME MORE</a>
				</div>
			</div>
			<!-- End Header Title -->
		</header>
		<!-- End Header -->

		<!-- Start Services -->
		<section class="services">
			<div class="container">
				<div class="row">
					<div class="col-12 services__title">
						<h2>SERVICES</h2>
						<p class="text-muted fst-italic my-4">Lorem ipsum dolor sit amet consectetur.</p>
					</div>
				</div>

				<div class="row justify-content-md-evenly mt-3">
					<div class="col-12 col-md-6 col-lg-4 my-3">
						<div class="services__card">
							<span class="fa-stack fa-4x services__card-icon">
								<i class="fas fa-circle fa-stack-2x"></i>
								<i class="fas fa-shopping-cart fa-stack-1x fa-inverse"></i>
							</span>
							<h3>E-Commerce</h3>
							<p>
								Lorem ipsum dolor sit amet, consectetur adipisicing elit. Minima maxime quam architecto quo inventore harum ex magni, dicta
								impedit.
							</p>
						</div>
					</div>
					<div class="col-12 col-md-6 col-lg-4 my-3">
						<div class="services__card">
							<span class="fa-stack fa-4x">
								<i class="fas fa-circle fa-stack-2x"></i>
								<i class="fas fa-laptop fa-stack-1x fa-inverse"></i>
							</span>
							<h3>Responsive Design</h3>
							<p>
								Lorem ipsum dolor sit amet, consectetur adipisicing elit. Minima maxime quam architecto quo inventore harum ex magni, dicta
								impedit.
							</p>
						</div>
					</div>
					<div class="col-12 col-md-6 col-lg-4 my-3">
						<div class="services__card">
							<span class="fa-stack fa-4x services__card-icon">
								<i class="fas fa-circle fa-stack-2x"></i>
								<i class="fas fa-lock fa-stack-1x fa-inverse"></i>
							</span>
							<h3>Web Security</h3>
							<p>
								Lorem ipsum dolor sit amet, consectetur adipisicing elit. Minima maxime quam architecto quo inventore harum ex magni, dicta
								impedit.
							</p>
						</div>
					</div>
				</div>
			</div>
		</section>
		<!-- End Services -->

		<!-- Start Portfolio -->
		<section class="portfolio">
			<div class="container">
				<div class="row">
					<div class="col-12 portfolio__title">
						<h2>PORTFOLIO</h2>
						<p class="text-muted fst-italic my-4">Lorem ipsum dolor sit amet consectetur.</p>
					</div>
				</div>

				<div class="portfolio__card-list mt-3">
					<% if (data.length > 0) { %> <% data.forEach(element => { %>
					<div class="portfolio__card">
						<div class="portfolio__card-img">
							<img src="/assets/img/portfolio/1.jpg" alt="" />
							<div class="portfolio__overlay">
								<!-- Link Detail Untuk Tampilan Laptop -->
								<a href="/detail/<%= element.uuid %>">DETAIL <i class="fas fa-angle-double-right"></i></a>
							</div>
						</div>
						<div class="portfolio__card-body">
							<h3><%= element.project_name %></h3>
							<p class="text-muted"><%= element.category %></p>
							<p class="text-muted"><%= new Date(element.release_date).toLocaleDateString('id-ID') %></p>
							<!-- Link Detail Untuk Tampilan HP/TABLET  -->
							<a href="/detail/<%= element.uuid %>">DETAIL <i class="fas fa-angle-double-right"></i></a>
						</div>
					</div>
					<% }) %> <% } else { %>
					<h1>THERE ARE NO PORTFOLIO AT THE MOMENT</h1>
					<% } %>
				</div>
			</div>
		</section>
		<!-- End Portfolio -->

		<!-- Bootstrap Bundle with Popper -->
		<script
			src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
			integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
			crossorigin="anonymous"
		></script>
	</body>
</html>
