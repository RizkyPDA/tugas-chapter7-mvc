<!DOCTYPE html>
<html lang="en">
	<head>
		<%- include('partials/head') %>
	</head>
	<body>
		<!-- Start Header -->
		<header class="header">
			<!-- Start Navbar -->
			<%- include("partials/navbar") %>
			<!-- End Navbar -->
		</header>

		<!-- Start Detail Portfolio -->
		<section class="editPortfolio">
			<div class="container">
				<div class="row">
					<div class="col-12 editPortfolio__title">
						<h2>EDIT PORTFOLIO</h2>
						<p class="text-muted fst-italic my-4">Lorem ipsum dolor sit amet consectetur.</p>
					</div>
				</div>

				<div class="mt-3 editPortfolio__form">
					<form action="/edit/<%= data.uuid %>" method="post">
						<div class="row mb-2">
							<div class="col">
								<label for="project_name">Project Name</label>
								<input
									type="text"
									class="form-control"
									placeholder="Project Name"
									name="project_name"
									value="<%= data.project_name %>"
									required
								/>
							</div>
							<div class="col">
								<label for="client">Client Name</label>
								<input type="text" class="form-control" placeholder="client" name="client" value="<%= data.client %>" required />
							</div>
						</div>
						<div class="row mb-2">
							<div class="col">
								<label for="category">Category Name</label>
								<input type="text" class="form-control" placeholder="Category" name="category" value="<%= data.category %>" required />
							</div>
						</div>
						<div class="row mb-2">
							<div class="col">
								<label for="category">Project Release</label>
								<input
									type="date"
									class="form-control"
									placeholder="Project initial release date"
									name="release_date"
									value="<%= new Date(data.release_date).toLocaleDateString('en-CA') %>"
									required
								/>
							</div>
						</div>
						<div class="editPortfolio__btn-group">
							<button type="submit" class="btn btn-lg btn-submit">Submit</button>
							<a href="/" class="btn btn-lg btn-back">Back</a>
						</div>
					</form>
				</div>
			</div>
		</section>
		<!-- End Detail Portfolio -->

		<!-- Bootstrap Bundle with Popper -->
		<script
			src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
			integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
			crossorigin="anonymous"
		></script>
	</body>
</html>
